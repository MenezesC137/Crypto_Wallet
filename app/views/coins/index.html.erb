<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<ul>
  <li> 
    <p> Data: <%= data_br(Date.today) %>
  </li>
  <li> 
    <td><%= link_to 'Inicio', welcome_index_path %></td>
  </li>
</ul>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, size: "48x25" %> </td>
        <td><%= link_to 'Mostra', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Excluir', coin, method: :delete, data: { confirm: 'Certeza que deseja apagar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova moeda', new_coin_path %>
